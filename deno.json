{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window", "dom"],
    "strict": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --unstable --allow-write src/app.ts",
    "test": "deno test --allow-net --allow-env --allow-read --unstable --allow-write"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
